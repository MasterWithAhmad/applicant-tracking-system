                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/login">Admin Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <%- body %>
    </div>
    <footer class="footer mt-5 py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">&copy; 2025 Ahmed Ibrahim - Job System</span>
        </div>
